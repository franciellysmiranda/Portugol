algoritmo "Fatorial"
var
  C, N, F: inteiro
  resposta: caractere
inicio
Repita
  Escreval ("Digite um número?")
  Leia (N)
  C <- N
  F <- 1
  Repita
   Escreva (C, " x")
   F <- F*C
   C <- C- 1
  Ate (C <1)
  Escreval ("O Valor da Fatorial de", N, " é igual a", F)
  Escreval ("Quer continuar? [S/N]")
  Leia (resposta)
Ate (resposta= "N")
fimalgoritmo
